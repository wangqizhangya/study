.instant-size > *{
    height: 100vh;
    overflow: hidden;
}
.br-fullpage-wrapper{
    overflow: hidden;
   // position: relative;
    height: 100vh;
}
.br-fullpage{
    position:relative;
    width: 100%;
    overflow: auto;
    -webkit-transition: margin 0.8s cubic-bezier(0.25,0.1,0.25,1);
    transition: margin 0.8s cubic-bezier(0.25,0.1,0.25,1);
    z-index: 1;
    height: 100vh;
    overflow: hidden;
}
.br-fullpage-nav{
    position: fixed;
    right: 20px;
    list-style-type: none;
    top: 50%;
    display: inline-block;
    z-index: 2;
}
.br-fullpage-nav li{
    margin: 5px;
}
.br-fullpage-nav li .br-fullpage-nav-item{
    display: inline-block;
    width: 7px;
    height: 7px;
    border: solid thin #ccc;
    box-sizing: border-box;
    border-radius: 7px;
}
.br-fullpage-nav li .br-fullpage-nav-item.active {
    background-color: #ccc;
}
}

