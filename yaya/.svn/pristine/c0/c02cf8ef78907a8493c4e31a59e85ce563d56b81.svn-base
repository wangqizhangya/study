.function-navbar{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 1000px;
    height:70px;
    padding: 0 178px;
    border-radius: 0 0 10px 10px;
    background-color: rgba(0, 0, 0, .2);
    background:url('../images/function_tab_1.png') no-repeat center;

     .nav > li > a {
        color:white;
        padding: 20px 60px 20px 40px;       
        &:hover{
            color: #0087cc;
            // background-color: rgba(0, 0, 0, .1);
            background-color: transparent;
            cursor: pointer;
        }
    }
    .last-a{
         padding: 20px 0px 20px 40px !important; 
    }
    .nav > li:last-child > a {
        color:white;
        padding: 20px 0px 20px 40px; 
        &:hover{
            color: #0087cc;
            // background-color: rgba(0, 0, 0, .1);
            background-color: transparent;
            cursor: pointer;
        }     
        
    }
     .nav > li:first-child > a {
        color:white;
        padding: 20px 65px 20px 42px;
        &:hover{
            color: #0087cc;
            // background-color: rgba(0, 0, 0, .1);
            background-color: transparent;
            cursor: pointer;
        }           
    }

    .nav-pills > li:nth-child(1).active > a, .nav-pills > li:nth-child(1).active > a:hover, .nav-pills > li:nth-child(1).active > a:focus,.nav-pills > li:nth-child(4).active > a, .nav-pills > li:nth-child(4).active > a:hover, .nav-pills > li:nth-child(4).active > a:focus {        
        color: #0081c6;
        background:none;
    }
    .nav-pills > li:nth-child(2).active > a, .nav-pills > li:nth-child(2).active > a:hover, .nav-pills > li:nth-child(2).active > a:focus,.nav-pills > li:nth-child(5).active > a, .nav-pills > li:nth-child(5).active > a:hover, .nav-pills > li:nth-child(5).active > a:focus {        
        color:#7EB43A;
        background:none;
    }
    .nav-pills > li:nth-child(3).active > a, .nav-pills > li:nth-child(3).active > a:hover, .nav-pills > li:nth-child(3).active > a:focus {        
        color:#D670D0;
        background:none;
    }
    .nav-pills > li > a {
        border-radius: 0px; 
        color: white;
    }
    .nav-pills > li > a:focus{
        background:none;
        outline:none;
    }
    .nav-pills > li.active > a:focus,.nav-pills > li.active > a{
        background:none;
        outline:none;
    } 

}
