@charset "utf-8";
.page-help{
	background:#F4F4F4;
	.contain{
		
		padding-top:20px;
	}
	p.text{
		text-indent:2em;
		//color:#999999;
	}
	p.title{
		font-weight:600;
	}
}
.border {
	background: white;
	border: 1px solid #e3e3e3;
	border-bottom: none;
}
.help-left{
	width:20%;
	min-height:500px;
	background:#FFFFFF;
	//margin-top:20px;
	.nav-pills > li.active > a, .nav-pills > li.active > a:hover, .nav-pills > li.active > a:focus {
	    background-color: #4688f1;
	    border-top: none;
	    color: white;
	}
	.nav-stacked > li + li{
		margin-top: 0;
	}

    .nav-pills > li > a {
    	border-radius: 0px; 
	    color:black;
	    border-top:none;
	    border-bottom: 1px solid #e3e3e3;
	    padding: 20px 20px;
	    margin:0;
	    cursor: pointer;
	}

	.nav-pills > li > a:hover{
	     background-color: #4688f1;
	     color:white;
	     border-top: none;
	}
	span{
		line-height:20px;
		padding-left:15px;
	}
	img{
		width:20px;
	}
}

.help-right{
	border-left:1px solid #e3e3e3;
	width:80%;
	min-height:500px;
	background:#FFFFFF;
	text-align: justify;
	//margin-top:20px;
	.pannel{
		margin: 15px 15px 0px 15px;
		border-bottom:1px  dashed #e3e3e3;
		padding-bottom: 10px;
	}
	.pannel:last-child{		
		border-bottom:none;		
	}
	.number{
		//background:#999999;
		//color:white;
		padding:0px 10px;
		margin-right:5px;
		line-height: 2;
	}
	p {
		padding-left:35px;
		padding-right:20px;
		margin: 0;
		line-height: 2;
		font-size:14px;

	}
	.text-muted {
	  color: #666666;
	}
	.imgName{
		padding-left:25%;

	}
	h5{
		padding-left:35px;
		padding-right:20px;
		padding-top:3px;
		padding-bottom:10px;
		margin: 0;
		line-height:1.6;
		font-weight:600;
		font-family: "Helvetica Neue",Helvetica,Arial,sans-serif,"Hiragino Sans GB","冬青黑体","Microsoft YaHei","微软雅黑","宋体";
	}
	img{
		padding: 5px 0px 10px 35px;
		&.small{
			width:500px;
		}
		&.large{
			width:745px;
		}
	}
}
