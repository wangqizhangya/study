@charset "utf-8";
$icon-font-path: "/bower_components/sass-bootstrap/fonts/";

[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
    display: none !important;
}

body,
html {
  height: 100%;
  font-family: Arial, Helvetica, "Hiragino Sans GB", "冬青黑体", "Microsoft YaHei", "微软雅黑", "宋体";
  color:#333333;
  &.hideOverflow{
    overflow:hidden;
    height : 100%;
  }
  &.autoOverflow{
    overflow:auto;
    height : 100%;

  }
}

