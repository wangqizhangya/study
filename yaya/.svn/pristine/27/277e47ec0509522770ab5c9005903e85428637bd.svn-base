.header{
    .nav-pills > li.active > a, .nav-pills > li.active > a:hover, .nav-pills > li.active > a:focus {
        color: #9b9b9b;
        background-color: transparent;
        border-top: 2px solid #4285f4;
        color: #4285f4;
    }
    .nav-pills > li > a {
        border-radius: 0px; 
    }

    .nav > li > a {
        color:#9b9b9b;
        background-color: transparent;
        border-top: 2px solid transparent;
        padding: 26px 0px;
        margin: 0px 20px;
    }

    .nav-pills > li > a:hover{
         background-color: transparent;
         border-top: 2px solid #4285f4;
        
    }

    a:focus{
        outline:none;
    }
}
